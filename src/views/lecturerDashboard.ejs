<%- include('./Partials/inAppheaderLec');%>

<body>
  <div class="container">
    <h1>Upcoming Consultations</h1>
    <% if (upcomingConsultations.length === 0) { %>
    <p>No upcoming consultations found.</p>
    <% } else { %> <% upcomingConsultations.forEach((consultation) => { %>
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title">
          Consultation with <%= consultation.lecturerEmail %>
        </h5>
        <p class="card-text">Date: <%= consultation.day %></p>
        <p class="card-text">
          Time: <%= consultation.startTime %> - <%= consultation.endTime %>
        </p>
        <p class="card-text">Attendees: <%= consultation.attendees.length %></p>
        <% consultation.attendeeNames.forEach((name) => { %>
        <p class="card-text">Attendee Name: <%= name %></p>
        <% }); %>
        <div>
          <form
            action="/cancel-consultation/<%= consultation._id %>"
            method="POST"
          >
            <button type="submit" class="btn btn-danger">
              Cancel Consultation
            </button>
          </form>
          <button
            type="button"
            class="btn btn-primary"
            data-toggle="modal"
            data-target="#editModal<%= consultation._id %>"
          >
            Edit Consultation
          </button>
        </div>
      </div>
    </div>

    <!-- Edit Modal -->
    <div
      class="modal fade"
      id="editModal<%= consultation._id %>"
      tabindex="-1"
      role="dialog"
      aria-labelledby="editModalLabel<%= consultation._id %>"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5
              class="modal-title"
              id="editModalLabel<%= consultation._id %>"
              style="margin-left: auto"
            >
              Edit Consultation
            </h5>
            <button
              type="button"
              class="close"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form
              action="/edit-consultation/<%= consultation._id %>"
              method="POST"
              style="width: 50%; margin-left: auto; margin-right: auto"
            >
              <div class="form-group">
                <label for="day">Day:</label>
                <input
                  type="text"
                  id="day"
                  name="day"
                  class="form-control"
                  value="<%= consultation.day %>"
                  required
                />
              </div>
              <div class="form-group">
                <label for="startTime">Start Time:</label>
                <input
                  type="text"
                  id="startTime"
                  name="startTime"
                  class="form-control"
                  value="<%= consultation.startTime %>"
                  required
                />
              </div>
              <div class="form-group">
                <label for="endTime">End Time:</label>
                <input
                  type="text"
                  id="endTime"
                  name="endTime"
                  class="form-control"
                  value="<%= consultation.endTime %>"
                  required
                />
              </div>
              <button
                type="submit"
                class="btn btn-primary"
                style="
                  width: 100%;
                  background-color: #031a39;
                  border-color: #031a39;
                "
              >
                Update Consultation
              </button>
            </form>
          </div>
          <div class="modal-footer"></div>
        </div>
      </div>
    </div>

    <% }); %> <% } %>
  </div>
</body>