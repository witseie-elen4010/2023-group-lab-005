
<head>
  <link rel="stylesheet" href="./public/styles/signin.css" />
</head>

<main class="container main">
  <div class="row">
    <div class="col-12 col-md-6 order-md-1 col-sm-12 order-sm-1 form mb-5">
      <form class="form-signin" action="/login-student" method="POST">
        <h1 class="h3 mb-2 font-weight-normal">Welcome Back</h1>
        <p class="mb-3" style="color: #aaa; font-weight: 300">
          Sign in as a Student
        </p>
        <label for="email" class="sr-only">Email:</label>
        <input
          type="text"
          name="email"
          id="email"
          class="form-control mb-3"
          placeholder="Email"
          required
          autofocus
        />
        <label for="password" class="sr-only">Password:</label>
        <input
          type="password"
          name="password"
          id="password"
          class="form-control mb-5"
          placeholder="Password"
          required
        />
        <button class="btn btn-primary btn-block signin-btn" type="submit">
          Sign in
        </button>

        <p class="mb-3" style="color: #ff0000; font-weight: 500">
          <%= messages.error %>
        </p>

        <p class="mb-3" style="color: #32dd40; font-weight: 500">
            
       </p>

      </form>
    </div>
    <div class="col-12 col-md-6 order-md-2 col-sm-12">
      <img class="mb-5 auth-img" src="./public/images/auth.svg" width="100%" />
    </div>
  </div>
</main>
